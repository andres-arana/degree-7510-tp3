package modelo;

import java.util.Calendar;
import java.util.List;

public interface IVenta {
	void addProducto(Producto producto, int cantidad);
	void addOferta(String detalle, int cantidad, double montoUnitario);
	double getTotal();
	double getTotalDescuentos();
	double getTotalSinDescuentos();
	String getMedioDePago();
	Calendar getFecha();
	void cobrar(String formaDePago);
	int getCajaNro();
	String getUltimaLinea();
	List<LineItemProducto> getProductos();
	void marcarProductosOfertados(Producto producto, int cantidad);
	void marcarProductosOfertadosPorMarca(int cantidad, String marca);
	void marcarProductosOfertadosPorCategoria(int cantidad, String categoria);
	void marcarTodosLosProductosOfertadosPorCategoria(String categoria,
			List<Producto> excepciones);
	void marcarTodosLosProductosOfertadosPorMarca(String marca,
			List<Producto> excepciones);
	void aplicarDescuentoAlTotal(double descuento, String detalleOferta);
	
}
